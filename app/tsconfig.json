{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "typeRoots" : ["./src/types", "./node_modules/@types"],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
   }
}